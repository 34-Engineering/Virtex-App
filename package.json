{
  "name": "virtex-app",
  "description": "A desktop app for streaming video and data from the 34E Virtex Camera.",
  "homepage": "https://34engineering.com/virtex",
  "version": "0.1.0",
  "author": {
    "name": "Liam Snow",
    "email": "liamsnow03@gmail.com"
  },
  "main": "src/electron.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve -c web",
    "electron:serve-tsc": "tsc -p src/config/tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build"
  },
  "build": {
    "productName": "virtex-app",
    "directories": {
      "output": "release/"
    },
    "files": [
      "**/*",
      "!src/**/*.ts",
      "!package.json",
      "!package-lock.json",
      "!angular.json",
      "!src/config/**/*"
    ],
    "win": {
      "icon": "./dist/assets/icons/icon.ico",
      "target": [
        "NSIS"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "virtex-app",
      "artifactName": "virtex-app.${version}.${ext}"
    }
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "11.0.0",
    "@angular-devkit/build-angular": "0.1102.0",
    "@angular/animations": "~11.2.0",
    "@angular/cdk": "^11.2.0",
    "@angular/cli": "11.2.0",
    "@angular/common": "11.2.0",
    "@angular/compiler": "11.2.0",
    "@angular/compiler-cli": "11.2.0",
    "@angular/core": "11.2.0",
    "@angular/forms": "11.2.0",
    "@angular/language-service": "11.2.0",
    "@angular/material": "^11.2.0",
    "@angular/platform-browser": "11.2.0",
    "@angular/platform-browser-dynamic": "11.2.0",
    "@angular/router": "11.2.0",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/node": "12.12.6",
    "chai": "4.2.0",
    "chart.js": "^2.9.4",
    "conventional-changelog-cli": "2.1.1",
    "core-js": "3.6.5",
    "cross-env": "7.0.3",
    "electron": "^11.3.0",
    "electron-builder": "22.9.1",
    "electron-reload": "1.5.0",
    "npm-run-all": "4.1.5",
    "rxjs": "6.6.3",
    "spectron": "13.0.0",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "typescript": "4.0.5",
    "wait-on": "^5.2.1",
    "webdriver-manager": "12.1.8",
    "zone.js": "0.10.3"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "dependencies": {
    "serialport": "^9.2.0"
  }
}
